@model ChooseNameAndSpectatorModel

<div class="modal fade" id="@Model.Id" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content ">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Выберете имя</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="d-flex justify-content-start flex-column modal-body">

                    @if(Model.ChooseName) {
                        <label class="m-2 p-1">Имя</label>
                        <input id="@Model.IdField" type="text" class="p-1 m-2 addLink--container"/>
                    }
                    @if(Model.ChooseSpectator) {
                        <div class="m-2 d-flex justify-content-between">
                            <div>Присоединиться как наблюдатель</div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="isSpectatorField">
                            </div>
                        </div>
                    }

                    <button type="button" data-clipboard-target="#linkToCopy" id="@Model.IdBtn" class="m-2 flex-grow-1 btn--blue">Продолжить</button>

                </div>
            </div>
        </div>
    </div>