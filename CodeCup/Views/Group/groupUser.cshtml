@model GroupVm
@{
    ViewData["Title"] = "Группа";
}
@{
    string guidValue = Model.Name.ToString();
}
<div>
    <div class="p-1 m-2 addLink--container">
        @Model.Link
    </div>

    <label>Пользователь</label>
    <p id="CurrentName"></p>

    <input id="numId" type="number" placeholder="Выбрать значение"/>
    <button  type="button" id="sendBtn" >Проголосовать</button>

</div>

<div id="chatroom"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script>
    let groupId = "@Html.Raw(guidValue)";
    let currentUsername = ""

    const hubConnection = new signalR.HubConnectionBuilder()
        .withUrl("http://localhost:5010/user")
        .build();

    document.getElementById("sendBtn").addEventListener("click", function () {
        let number = document.getElementById("numId").value

        console.log(groupId + " " + currentUsername + " " + number)
        
        hubConnection.invoke("SetVote", {"Value" : number, "GroupId" : groupId, "Username" : currentUsername})
            .catch(function (err) {
                return console.error(err.toString());
            });
    });

    hubConnection.on("FinishVoting", function(usersVote) {
        let messageElement = document.createElement("p");
        for(item in usersVote) {
            let messageElement = document.createElement("p");
            messageElement.textContent = item.Name + " Vote " +  item.Value ;
            document.getElementById("chatroom").appendChild(messageElement);
        }
     
    });

    hubConnection.on("UserAdded", function(username) {
        if(currentUsername === "") {
            currentUsername = username
            document.getElementById("CurrentName").textContent = currentUsername ;

        }
        let messageElement = document.createElement("p");
        messageElement.textContent = "Added " +  username ;
        document.getElementById("chatroom").appendChild(messageElement);
    });

    hubConnection.start()
        .then(function () {
            hubConnection.invoke("JoinGroupFromLink", groupId)
            .catch(function (err) {
                return console.error(err.toString());
            });
        })
        .catch(function (err) {
            return console.error(err.toString());
        });
    
</script>
